<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WF2.Views.SettingsView"
             DataContext="{Binding SettingsViewModel, Source={StaticResource ServiceLocator}}">

    <UserControl.Styles>
        <Style Selector="UserControl">
            <Setter Property="Background" Value="#f5f5f5"/>
        </Style>
        
        <Style Selector="UserControl.dark">
            <Setter Property="Background" Value="#1e1e1e"/>
        </Style>
        
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        
        <Style Selector="TextBlock.title.dark">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        
        <Style Selector="Border.card.dark">
            <Setter Property="Background" Value="#2c2c2c"/>
            <Setter Property="BorderBrush" Value="#404040"/>
        </Style>
        
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style Selector="TextBlock.section-title.dark">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="TextBlock.label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="120"/>
        </Style>
        
        <Style Selector="TextBlock.label.dark">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="TextBlock.hint">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#95a5a6"/>
        </Style>
        
        <Style Selector="TextBlock.hint.dark">
            <Setter Property="Foreground" Value="#b0b0b0"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20">
            <TextBlock Text="{Binding Title}"
                      Classes="title"/>

            <!-- 主题设置 -->
            <Border Classes="card">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding AppearanceLabel}" Classes="section-title"/>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding DarkModeLabel}" Classes="label"/>
                        <CheckBox IsChecked="{Binding UseDarkTheme}" Content="{Binding DarkModeCheckBox}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 语言设置 -->
            <Border Classes="card">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding LanguageLabel}" Classes="section-title"/>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="{Binding InterfaceLanguageLabel}" Classes="label"/>
                        <ComboBox ItemsSource="{Binding AvailableLanguages}"
                                 SelectedItem="{Binding SelectedLanguage}"
                                 MinWidth="150"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock Text="{Binding RestartHint}" Classes="hint"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
