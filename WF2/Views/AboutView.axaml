<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WF2.Views.AboutView"
             DataContext="{Binding AboutViewModel, Source={StaticResource ServiceLocator}}">

    <UserControl.Styles>
        <Style Selector="UserControl">
            <Setter Property="Background" Value="#f5f5f5"/>
        </Style>
        
        <Style Selector="UserControl.dark">
            <Setter Property="Background" Value="#1e1e1e"/>
        </Style>
        
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        
        <Style Selector="TextBlock.title.dark">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="TextBlock.version">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#7f8c8d"/>
        </Style>
        
        <Style Selector="TextBlock.version.dark">
            <Setter Property="Foreground" Value="#b0b0b0"/>
        </Style>
        
        <Style Selector="Border.separator">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Background" Value="#e0e0e0"/>
            <Setter Property="Margin" Value="0,10"/>
        </Style>
        
        <Style Selector="Border.separator.dark">
            <Setter Property="Background" Value="#404040"/>
        </Style>
        
        <Style Selector="TextBlock.description">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#34495e"/>
            <Setter Property="MaxWidth" Value="500"/>
        </Style>
        
        <Style Selector="TextBlock.description.dark">
            <Setter Property="Foreground" Value="#d0d0d0"/>
        </Style>
        
        <Style Selector="Border.card">
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style Selector="Border.card.dark">
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Background" Value="#2c2c2c"/>
        </Style>
        
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style Selector="TextBlock.section-title.dark">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="TextBlock.feature">
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style Selector="TextBlock.feature.dark">
            <Setter Property="Foreground" Value="#d0d0d0"/>
        </Style>
        
        <Style Selector="TextBlock.copyright">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#95a5a6"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
        
        <Style Selector="TextBlock.copyright.dark">
            <Setter Property="Foreground" Value="#b0b0b0"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" HorizontalAlignment="Center" MaxWidth="600">
            <!-- Logo/å›¾æ ‡ -->
            <TextBlock Text="ðŸŒ¤ï¸" FontSize="80" HorizontalAlignment="Center"/>

            <!-- åº”ç”¨åç§° -->
            <TextBlock Text="{Binding AppName}"
                      Classes="title"/>

            <!-- ç‰ˆæœ¬ä¿¡æ¯ -->
            <TextBlock Text="{Binding Version}"
                      Classes="version"/>

            <!-- åˆ†éš”çº¿ -->
            <Border Classes="separator"/>

            <!-- æè¿° -->
            <TextBlock Text="{Binding Description}"
                      Classes="description"/>

            <!-- åŠŸèƒ½ç‰¹æ€§ -->
            <Border Classes="card" Margin="0,10">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding Features}" Classes="section-title"/>
                    <TextBlock Text="{Binding Feature1}" Classes="feature"/>
                    <TextBlock Text="{Binding Feature2}" Classes="feature"/>
                    <TextBlock Text="{Binding Feature3}" Classes="feature"/>
                    <TextBlock Text="{Binding Feature4}" Classes="feature"/>
                    <TextBlock Text="{Binding Feature5}" Classes="feature"/>
                </StackPanel>
            </Border>

            <!-- æŠ€æœ¯æ ˆ -->
            <Border Classes="card">
                <StackPanel Spacing="10">
                    <TextBlock Text="{Binding TechStack}" Classes="section-title"/>
                    <TextBlock Text="{Binding Tech1}" Classes="feature"/>
                    <TextBlock Text="{Binding Tech2}" Classes="feature"/>
                    <TextBlock Text="{Binding Tech3}" Classes="feature"/>
                    <TextBlock Text="{Binding Tech4}" Classes="feature"/>
                    <TextBlock Text="{Binding ApiProvider, StringFormat='ðŸ”¹ æ•°æ®æ¥æº: {0}'}" Classes="feature"/>
                </StackPanel>
            </Border>

            <!-- ç‰ˆæƒä¿¡æ¯ -->
            <TextBlock Text="{Binding Copyright}"
                      Classes="copyright"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
