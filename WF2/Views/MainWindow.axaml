<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="WF2.Views.MainWindow"
        DataContext="{Binding MainWindowViewModel, Source={StaticResource ServiceLocator}}"
        Icon="/Assets/avalonia-logo.ico"
        Title="{Binding Title}"
        Width="1024" Height="600">

    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        <Style Selector="Window.dark">
            <Setter Property="Background" Value="#121212"/>
        </Style>

        <!-- 左侧导航菜单样式 -->
        <Style Selector="Border.navigation-menu">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderBrush" Value="#BBDEFB"/>
        </Style>
        <Style Selector="Border.navigation-menu.dark">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#2C2C2C"/>
        </Style>

        <!-- 导航标题样式 -->
        <Style Selector="TextBlock.navigation-title">
            <Setter Property="Foreground" Value="#1565C0"/>
        </Style>
        <Style Selector="TextBlock.navigation-title.dark">
            <Setter Property="Foreground" Value="#90CAF9"/>
        </Style>

        <!-- 导航按钮样式 -->
        <Style Selector="Button.navigation-button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style Selector="Button.navigation-button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#BBDEFB"/>
        </Style>
        <Style Selector="Button.navigation-button.dark:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2C2C2C"/>
        </Style>
        <Style Selector="Button.navigation-button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#1976D2"/>
        </Style>
        <Style Selector="Button.navigation-button.dark:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#1565C0"/>
        </Style>

        <!-- 导航按钮文本样式 -->
        <Style Selector="TextBlock.navigation-text">
            <Setter Property="Foreground" Value="#1976D2"/>
        </Style>
        <Style Selector="TextBlock.navigation-text.dark">
            <Setter Property="Foreground" Value="#90CAF9"/>
        </Style>

        <!-- 分隔线样式 -->
        <Style Selector="Border.separator">
            <Setter Property="Background" Value="#BBDEFB"/>
        </Style>
        <Style Selector="Border.separator.dark">
            <Setter Property="Background" Value="#2C2C2C"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="180,*">
        <!-- 左侧导航菜单 -->
        <Border Grid.Column="0"
                Classes="navigation-menu"
                BorderThickness="0,0,1,0"
                Padding="12">
            <StackPanel Spacing="6">
                <TextBlock Text="{Binding NavigationMenu}"
                          Classes="navigation-title"
                          FontSize="18"
                          FontWeight="Bold"
                          Margin="8,8,0,20"/>

                <!-- 天气首页 -->
                <Button Classes="navigation-button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Command="{Binding NavigateToMainCommand}"
                        Padding="10,8"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="WeatherPartlyCloudy" Width="18" Height="18"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding WeatherHome}"
                                  Classes="navigation-text"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 天气详情 -->
                <Button Classes="navigation-button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Command="{Binding NavigateToWeatherDetailCommand}"
                        Padding="10,8"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="ChartLine" Width="18" Height="18"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding WeatherDetail}"
                                  Classes="navigation-text"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 城市管理 -->
                <Button Classes="navigation-button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Command="{Binding NavigateToCitiesCommand}"
                        Padding="10,8"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="MapMarker" Width="18" Height="18"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CityManagement}"
                                  Classes="navigation-text"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 分隔线 -->
                <Border Classes="separator"
                        Height="1"
                        Margin="8,12"/>

                <!-- 设置 -->
                <Button Classes="navigation-button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Command="{Binding NavigateToSettingsCommand}"
                        Padding="10,8"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="Cog" Width="18" Height="18"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Settings}"
                                  Classes="navigation-text"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- 关于 -->
                <Button Classes="navigation-button"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Left"
                        Command="{Binding NavigateToAboutCommand}"
                        Padding="10,8"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <materialIcons:MaterialIcon Kind="InformationOutline" Width="18" Height="18"
                                                   Foreground="#1976D2"
                                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding About}"
                                  Classes="navigation-text"
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <ContentControl Grid.Column="1" Content="{Binding Content}"/>
    </Grid>
</Window>

